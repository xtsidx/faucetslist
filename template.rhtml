    <meta charset="utf-8" />
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Faucet list</title>
    <link rel="shortcut icon" type="image/png" href="favicon.png"/>
    <link rel="stylesheet" href="vendor/foundation.min.css" />
    <link rel="stylesheet" href="vendor/foundation-icons/foundation-icons.css" />
    <link rel="stylesheet" href="style.css" />
  </head>
  <body>

    <br>

    <header class="row column">
        <h1>Faucets List <a href="#" data-open="modalMainMenu" class="float-right fi-list"></a></h1>
    </header>

    <div class="row column text-center">
    <ins class="bmadblock-569e7b119867485b0456fd92" style="display:inline-block;width:728px;height:90px;"></ins>
    <script async type="application/javascript" src="//ad.bitmedia.io/js/adbybm.js/569e7b119867485b0456fd92"></script>
    </div>

    <div class="row column">

        <ul class="tabs" data-tabs id="faucets-tabs">
            <% lists.each do |coin, list| %>
                <li class="tabs-title <%= coin == 'BTC' ? 'is-active' : '' %>"><a href="#tab_<%= coin %>"><%= "#{coin} [#{list.length}]" %></a></li>
            <% end %>
        </ul>

        <div class="tabs-content" data-tabs-content="faucets-tabs">
            <% lists.each do |coin, list| %>
                <div class="tabs-panel <%= coin == 'BTC' ? 'is-active' : '' %>" id="tab_<%= coin %>">
                    <% list.each_with_index do |faucet, i| %>

                    <div class="row faucet" data-faucet-id="<%== faucet[2] %>">
                        <div class="columns text-center ifhidden"><%= i+1 %>. <%== faucet[0] %></div>
                        <div class="small-3 medium-2 large-1 columns text-center">
                            <a class="fi-like like" title="Like Faucet"></a>
                            <a class="fi-dislike dislike" title="Dislike Faucet"></a>
                        </div>
                        <div class="columns small-9 medium-4 large-6">
                            <span><%= i+1 %></span>
                            <a href="<%= faucet[1] %>" target="_blank" class="link"><%== faucet[0] %></a>
                        </div>
                        <div class="hide-for-medium columns small-12"></div>
                        <div class="columns small-4 medium-1 large-1 text-center ">
                            <a class="eye fi-eye"></a>
                        </div>
                        <div class="columns large-1 medium-2 small-4">
                            <input type="text" class="time input-group-field" placeholder="time">
                        </div>
                        <div class="columns medium-1 small-4 text-center large-1">
                            <a class="star">&#9733;</a>
                        </div>
                        <div class="columns medium-2 small-12 large-2">
                            <a class="button expanded visit" title="Vivsit faucet and start timer">Visit</a>
                        </div>
                    </div>

                    <% end %>
                </div>
            <% end %>
        </div>

    </div>

    <div id="addressbook" class="hidden">
        <div class="">
            <a class="button secondary fi-address-book showbookbtn"> Address Book</a>
        </div>
        <div class="panel">
            <div class="input-group">
                <span class="input-group-label">BTC</span>
                <input class="input-group-field" value="<%= addressbook['BTC'] %>" type="text">
                <div class="input-group-button">
                    <input type="submit" class="button check" value="CHECK">
                </div>
            </div>
            <div class="input-group">
                <span class="input-group-label">LTC</span>
                <input class="input-group-field" value="<%= addressbook['LTC'] %>" type="text">
                <div class="input-group-button">
                    <input type="submit" class="button check" value="CHECK">
                </div>
            </div>
            <div class="input-group">
                <span class="input-group-label">PPC</span>
                <input class="input-group-field" value="<%= addressbook['PPC'] %>" type="text">
                <div class="input-group-button">
                    <input type="submit" class="button check" value="CHECK">
                </div>
            </div>
            <div class="input-group">
                <span class="input-group-label">XPM</span>
                <input class="input-group-field" value="<%= addressbook['XPM'] %>" type="text">
                <div class="input-group-button">
                    <input type="submit" class="button check" value="CHECK">
                </div>
            </div>
            <div class="input-group">
                <span class="input-group-label">DOGE</span>
                <input class="input-group-field" value="<%= addressbook['DOGE'] %>" type="text">
                <div class="input-group-button">
                    <input type="submit" class="button check" value="CHECK">
                </div>
            </div>
            <div class="input-group">
                <span class="input-group-label">DASH</span>
                <input class="input-group-field" value="<%= addressbook['DASH'] %>" type="text">
                <div class="input-group-button">
                    <input type="submit" class="button check" value="CHECK">
                </div>
            </div>
            <a class="button save expanded small secondary">Save address book</a>
        </div>
    </div>

