    <div class="reveal large" id="modalMainMenu" data-reveal>
        <h1>MENU</h1>
        <div class="row">
            <div class="columns medium-6">
                <h3>Data</h3>
                <ul class="menu vertical">
                    <li><a href="#" data-close id="btn_savenow">SAVE NOW</a></li>
                    <li><a href="#" data-close id="btn_compactdata">Compact and Save</a></li>
                    <li><a href="#" data-close id="btn_delnotfounds" title="Delete not founds faucets from data">Delete not founds</a></li>
